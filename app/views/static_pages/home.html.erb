          <%=f.submit"Đăng nhập",class:"btn btn-primary"%>
        <%end%>
        <p>Bạn chưa có tài khoản?: <%=link_to "Đăng ký ngay!", new_user_registration_path%></p>
      </div>
    </div>
  </div>
<% end %>
