<tr>
  <td><%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %></td>
  <td>
    <% if current_user.admin? && !current_user?(user) %>
    <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, user, method: :delete,
      data: { confirm: "bạn chắc chứ?" } %>
  <% end %>
  </td>
</tr>
