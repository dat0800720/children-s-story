<h1 class="login">Cuốn truyện muốn thêm mới của tôi</h1>
<div class="container">
  <div class="row">
    <% @my_story.each do |tale|%>
      <div class="col-lg-3 col-md-4 col-sm-3 form-product">
        <div class="card product_item">
          <div class="body">
            <div class="cp_img">
              <%= link_to preview_tale_path(tale) do %>
                <%= image_tag tale.image if tale.image.attached? %>
              <% end %>
            </div>
            <div class="product_details">
              <h5 class="text-overflow"><%= link_to tale.title, preview_tale_path(tale) %></h5>
            </div>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>
