<%= form_for [@tale, @reviewtale] do |f| %>
  <div id="rating-form">
    <label>Đánh giá sao:</label>
  </div>
  <label>Bình luận</label>
  <%= f.text_field :comment, class: 'form-control' %>
  <% name_action = action_name == "edit" ? "Sửa đánh giá" : "Tạo đánh giá" %>
  <%= f.submit name_action, class: "btn btn-primary" %>
<% end %>

<script>
  $("#rating-form").raty({
    path: '/images/ratyrate',
    scoreName: "reviewtale[rating]"
  });
</script>
