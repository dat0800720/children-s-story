<div class="wrapper-admin">
  <nav id="sidebar">
    <div class="sidebar-header">
      <h3> Truyện thiếu nhi</h3>                
    </div>
    <ul class="list-unstyled components">
      <li>
       <%= link_to '<i class="fa fa-home"></i> Trang chủ'.html_safe, root_path %>
      </li>
      <li class="active">
        <a href="#homeSubmenu" class="nav-link dropdown-toggle" data-toggle="collapse" aria-expanded="false"><i class='fa fa-user'> Người dùng </i> </a>
        <ul class="collapse list-unstyled" id="homeSubmenu">
          <li><%= link_to "Đăng ký", new_user_path, class: "nav-link" %></li>
          <li><%= link_to "Tât cả người dùng", users_path, class: "nav-link" %></li>
        </ul>
      </li>
      <li>
        <a href="#Tale" class="nav-link dropdown-toggle" data-toggle="collapse" aria-expanded="false"><i class='fa fa-book'>  Truyện </i> </a>
        <ul class="collapse list-unstyled" id="Tale">
          <li><%= link_to "Tạo truyện", new_tale_path, class: "nav-link" %></li>
          <li><%= link_to "Tất cả truyện", tales_path, class: "nav-link" %></li>
        </ul>
      </li>
      <li>
        <a href="#category" class="nav-link dropdown-toggle" data-toggle="collapse" aria-expanded="false"><i class='fa fa-list-alt'>  Thể loại </i></a>
        <ul class="collapse list-unstyled" id="category">
          <li><%= link_to "Tạo thể loại", new_category_path , class: "nav-link" %></li>
