<% provide(:title, 'Tất cả thể loại') %>
<% if current_user.admin? %>
  <div class="btn">
    <span>
      <div>
        <%= form_tag categories_path, method: :get, class: "form-inline my-2 my-lg-0" do %>
          <%= text_field_tag :term, params[:term], class: "form-control mr-sm-0", placeholder: "Tìm kiếm thể loại truyện..."  %>
          <%= submit_tag "Tìm kiếm", class: "search_text" %>
        <% end %>
      </div>
    </span>
  </div>
<% end %>
<% if current_user.admin? %>
  <h1 class ="login">Tất cả thể loại</h1>
  <table>
    <tr>
      <th>Tên thể loại truyện</th>
      <th>thao tác</th>
    </tr>
    <%= render @categories%>
  </table>
<% else %>
  <h1 class ="login">Tất cả thể loại</h1>
  <table>
    <%= render @categories%>
  </table>
<% end %>
